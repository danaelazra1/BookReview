<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#D7A67D">

    <!-- רקע חום שקוף לביקורת עם צל ומסגרת חיצונית -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="12dp"
        android:background="#BB8B5A"
        android:padding="8dp"
        android:orientation="horizontal"
        android:elevation="6dp">

        <!-- תמונת הספר (משמאל, פרופורציונלית) -->
        <ImageView
            android:id="@+id/bookImageView"
            android:layout_width="100dp"
            android:layout_height="130dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_default_book"
        android:layout_marginEnd="8dp"/>

        <!-- אזור המידע והביקורת (צמוד לתמונה) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- שם המשתמש -->
            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#4B2C20"
                android:textStyle="bold"/>

            <!-- תאריך -->
            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#000000"/>

            <!-- שם הספר -->
            <TextView
                android:id="@+id/bookTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#D2691E"
                android:textStyle="bold"/>

            <!-- מחבר הספר -->
            <TextView
                android:id="@+id/bookAuthorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"/>

            <!-- ביקורת הספר -->
            <TextView
                android:id="@+id/reviewTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
            android:ellipsize="end"
            android:textSize="15sp"
            android:lineSpacingExtra="6dp"
            android:textColor="#000000"/>
        </LinearLayout>

        <!-- אייקונים של עריכה ומחיקה -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end">

            <ImageView
                android:id="@+id/ic_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                app:tint="@color/editColor"
                android:src="@drawable/ic_edit"/>

            <ImageView
                android:id="@+id/ic_trash"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                app:tint="@color/errorColor"
                android:src="@drawable/ic_trash"/>
        </LinearLayout>
    </LinearLayout>

    <!-- קו מפריד בין ביקורות -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#6D4C41"
        android:layout_marginHorizontal="16dp"/>
</LinearLayout>
