<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#D7A67D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="12dp"
        android:background="#BB8B5A"
        android:padding="8dp"
        android:orientation="horizontal"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/bookImageView"
            android:layout_width="130dp"
            android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_default_book"
        android:layout_marginEnd="2dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#4B2C20"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/bookTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#DB6702"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/bookAuthorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/reviewTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:ellipsize="end"
                android:textSize="14sp"
                android:lineSpacingExtra="1dp"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end">

            <ImageView
                android:id="@+id/ic_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                app:tint="@color/editColor"
                android:src="@drawable/ic_edit"/>

            <ImageView
                android:id="@+id/ic_trash"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                app:tint="@color/errorColor"
                android:src="@drawable/ic_trash"/>

            <ImageView
                android:id="@+id/likeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_heart_outline"
                android:contentDescription="Like Icon"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#6D4C41"
        android:layout_marginHorizontal="16dp"/>
</LinearLayout>
